<Alloy>
	<Window id="win" class="container">
		<View class="navBar">
			<Button id="menu" onClick="showMenu" backgroundImage="/images/menuIcon.png"top="5" width="50" height="50" backgroundColor="white" left="5"/>
			<Button id="newIdea" onClick="showNewIdea" backgroundImage="/images/newIdeaIcon.png"top="5" width="50" height="50" backgroundColor="white">
		</View>
		<ScrollView top="50" bottom="50" contentHeight="auto" layout="vertical" showVerticalScrollIndicator="true">
			<View class="row" >
				<ImageView id="userImage" image="/images/someImage.png" width="150" height="100" />
			</View>
			<View class="row">
				<Label id="userName" color="#900" shadowColor="#aaa" text="A simple label" textAlign="Ti.UI.TEXT_ALIGNMENT_CENTER"  width="Ti.UI.SIZE" height="Ti.UI.SIZE" />
			</View>	
			<View class="row">
				<Label id="pitch" color="blue" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" width="200" height="200">
	    		</Label>
	    	</View>
	    	<View class="row">
	    		<Label id="comments" color="blue" textAlign="Ti.UI.TEXT_ALIGNMENT_LEFT" width="200" height="200">
	        	A long label with\na few line breaks\nand unicode (UTF8)\nsymbols such as\na white chess piece \u2655\nand the euro symbol \u20ac\nlooks like this!\n
	    		</Label>
    		</View>
    	</ScrollView>
    	<View class="actions">
    		<Button id="match" onClick="match" backgroundImage="/images/like.png" top="5" width="50" height="50" backgroundColor="green" left="50"/>
    		<Button id="comment" onClick="done" backgroundImage="/images/comment.png" top="5" width="50" height="50" backgroundColor="white"/>
    		<Button id="noMatch" onClick="noMatch" backgroundImage="/images/dislike.png" top="5" width="50" height="50" backgroundColor="red" right="50"/>
		</View>	
	</Window>
</Alloy>