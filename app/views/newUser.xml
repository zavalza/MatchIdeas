<Alloy>
	<Window class="container">
			<ScrollView id="content" contentHeight="auto" layout="vertical" showVerticalScrollIndicator="true">
				<View id="header" class="bigRow">
					<ImageView id="logo" image="/images/logoMatchIdeas.png" width="180" height="120" />
				</View>
				<View id="fbLogin" class="smallRow"/>
				<View class="smallRow">
		        	<TextField id="firstName" class="sansPro input"  color="#336699"   width="80%" height="35" hintText= 'Nombre'/>
				</View>
				<View class="smallRow">
					<TextField id="lastName" class="sansPro input"  color="#336699"   width="80%" height="35" hintText= 'Apellido'/>
				</View>
				<View class="smallRow">
					<TextField id="email" class="sansPro input"  color="#336699"   width="80%" height="35" hintText= 'Correo electrónico'/>
				</View>
				<View class="smallRow">
					<TextField id="password" class="sansPro input" passwordMask="true" color="#336699"  width="80%" height="35" hintText= 'Contraseña'/>
				</View>
				<View class="smallRow">
					<TextField id="passwordConfirmation" class="sansPro input"  passwordMask="true" color="#336699"  width="80%" height="35" hintText= 'Confirma contraseña'/>
				</View>
				<View class="row">
					<Button id="createUser" onClick="createUser" title="Registrarme"
					width="150" height="50"  color="#fefefe" backgroundColor="#04cbca"/>
				</View>
				<View class="row">
					<Button id="terms" class="sansPro" onClick="terms" title="TERMINOS Y CONDICIONES"
	       			 width="200" height="50" backgroundColor="white" color="black"/>
	       		</View>
			</ScrollView>
	</Window>
</Alloy>