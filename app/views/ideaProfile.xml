<Alloy>
	<Window id="win" class="container">
		<ScrollView id="content" top="30" bottom="70" contentHeight="auto" layout="vertical" showVerticalScrollIndicator="true">
			<View class="bigRow" >
				<ImageView id="userImage" onClick="showProfile" image="/images/someImage.png" top="10" width="150" height="100" />
			</View>
			<View class="smallRow">
				<Label id="userName" class="sansPro pink" onClick="showProfile" width="Ti.UI.SIZE" height="Ti.UI.SIZE" />
			</View>	
			<View width='100%' top="0" left="0" borderWidth="2" borderColor="#e9e9e9" height="120">
				<Label id="pitch" class="sansPro aqua"  width="80%" >
	    		</Label>
	    	</View>
    	</ScrollView>
    	<View class="actions" bottom="0">
    		<Button id="match" onClick="match" backgroundImage="/images/like.png" bottom="20" width="50" height="50" backgroundColor="#04cbca" left="50"/>
    		<Label id="matchCount" class="sansPro aqua bold"  onClick="match" bottom="0" left="75"/>
    		<Button id="comment" onClick="comment" backgroundImage="/images/comment.png" bottom="20" width="50" height="50" backgroundColor="#cbc01f"/>
    		<Label id="commentCount" class="sansPro gold bold"  onClick="comment" bottom="0"/>
    		<Button id="noMatch" onClick="noMatch" backgroundImage="/images/dislike.png" bottom="20" width="50" height="50" backgroundColor="#cc0a98" right="50"/>
    		<Label id="noMatchCount" class="sansPro pink bold" onClick="noMatch" bottom="0" right="75"/>
		</View>	
	</Window>
</Alloy>